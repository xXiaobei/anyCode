<!DOCTYPE html>
<html>
<% include ./partials/head %>

<body id="main_page">
  <div class="container" style="margin-top: -49px;">
    <% include ./partials/header %>

    <table class="table table-light">
      <thead class="thead-light">
        <tr>
          <th style="width: 300px;">主词</th>
          <th>状态</th>
          <th style="width: 310px;">操作</th>
        </tr>
      </thead>
      <tbody>
      <% page.result.forEach(ele => { %>
        <tr>
          <td><%= ele.name %></td>
          <td><a>已获取50个关键词...点击查看结果</a></td>
          <td>
            <div class="btn-group" role="group" aria-label="Button group">
                <button type="button" class="btn btn-default">过滤词</button>
                <button type="button" class="btn btn-default">包含词</button>
                <button type="button" class="btn btn-default">开始</button>
                <button type="button" class="btn btn-default">暂停</button>
                <button type="button" class="btn btn-default">结束</button>
            </div>
          </td>
        </tr>
      <% }); %>        
      </tbody>
      <tfoot>
        <tr>
          <th colspan="3">
            <ul class="pagination pull-right" style="margin-top:0px;">
              
                <% if(page.firstPage){ %>
                  <li class="disabled"><a href="#">&laquo;</a></li>
                <% } else { %>
                  <li><a href="#">&laquo;</a></li>
                <% } %>
                <% for(let i=1; i<=page.pageCounter; i++) { %>
                  <% if(i==1) {%>
                    <li class="active"><a href="#"><%= i %></a></li>
                  <% } else { %>                  
                    <li><a href="#"><%= i %></a></li>    
                  <% } %>
                <% } %>               
                <% if(page.lastPage){ %>
                  <li class="disabled"><a href="#">&raquo;</a></li>
                <% } else { %>                
                  <li><a href="#">&raquo;</a></li>
                <% } %>
                
            </ul>
          </th>
        </tr>
      </tfoot>
    </table>

  </div>
</body>
<% include ./partials/footer %>

</html>